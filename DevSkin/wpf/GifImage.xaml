<UserControl x:Class="DevSkin.wpf.GifImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevSkin.wpf"
             xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Image gif:AnimationBehavior.RepeatBehavior="{Binding RepeatBehavior}" gif:AnimationBehavior.SourceUri="{Binding ImgSource}" gif:AnimationBehavior.AutoStart="True" gif:AnimationBehavior.AnimateInDesignMode="True"/>
</UserControl>
